<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sistema de Postos de Combustível</title>
    
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    
    <style>
        body {
            padding-top: 20px;
            background-color: #f8f9fa;
        }
        .container {
            max-width: 1200px;
        }
        .table th {
            background-color: #343a40;
            color: white;
        }
        .btn-sm {
            margin-right: 5px;
        }
        .alert {
            margin-top: 20px;
        }
        .form-control:focus {
            border-color: #86b7fe;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }
        .price-cell {
            font-weight: bold;
            text-align: center;
        }
        .no-price {
            color: #6c757d;
            font-style: italic;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Menu de navegação -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark rounded mb-4">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <i class="bi bi-fuel-pump"></i> Postos de Combustível
                </a>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="/posto">
                                <i class="bi bi-list"></i> Listar Postos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/posto/novo">
                                <i class="bi bi-plus-circle"></i> Novo Posto
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Conteúdo principal -->
        <div class="card shadow">
            <div class="card-body">
                {{{body}}}
            </div>
        </div>

        <!-- Rodapé -->
        <footer class="mt-4 text-center text-muted">
            <hr>
            <p>Sistema de Gerenciamento de Postos de Combustível &copy; 2024</p>
        </footer>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Scripts customizados -->
    <script>
        // Auto-foco no primeiro campo de formulário
        document.addEventListener('DOMContentLoaded', function() {
            const firstInput = document.querySelector('form input:not([type="hidden"])');
            if (firstInput) firstInput.focus();
            
            // Validação de números positivos
            const numberInputs = document.querySelectorAll('input[type="number"]');
            numberInputs.forEach(input => {
                input.addEventListener('input', function() {
                    if (this.value < 0) this.value = 0;
                });
            });
            
            // Auto-formatação de telefone
            const telefoneInput = document.querySelector('input[name="telefone"]');
            if (telefoneInput) {
                telefoneInput.addEventListener('input', function(e) {
                    let value = e.target.value.replace(/\D/g, '');
                    if (value.length > 10) {
                        value = value.replace(/^(\d{2})(\d{5})(\d{4}).*/, '($1) $2-$3');
                    } else if (value.length > 6) {
                        value = value.replace(/^(\d{2})(\d{4})(\d{0,4}).*/, '($1) $2-$3');
                    } else if (value.length > 2) {
                        value = value.replace(/^(\d{2})(\d{0,5})/, '($1) $2');
                    } else if (value.length > 0) {
                        value = value.replace(/^(\d*)/, '($1');
                    }
                    e.target.value = value;
                });
            }
        });
        
        // Função para formatar preço enquanto digita
        function formatPrice(input) {
            let value = input.value.replace(/[^\d,]/g, '');
            if (value.includes(',')) {
                let parts = value.split(',');
                parts[0] = parts[0].replace(/\D/g, '');
                if (parts.length > 1) {
                    parts[1] = parts[1].replace(/\D/g, '').substring(0, 3);
                }
                input.value = parts.join(',');
            } else {
                input.value = value;
            }
        }
    </script>
</body>
</html>