<!-- src/views/index.hbs -->
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PostoFácil - Sistema de Postos de Combustível</title>
    
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    
    <!-- CSS Personalizado -->
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <a href="/" class="logo text-decoration-none">
                    <i class="bi bi-fuel-pump"></i>
                    <h1 class="mb-0">PostoFácil</h1>
                </a>
                <nav class="nav">
                    <div class="user-info">
                        <i class="bi bi-person-circle"></i>
                        <span>Sistema de Postos</span>
                    </div>
                    <a href="/posto" class="btn btn-outline-light">
                        <i class="bi bi-list"></i> Gerenciar Postos
                    </a>
                </nav>
            </div>
        </div>
    </header>

    <!-- Seção de Busca -->
    <section class="search-section">
        <div class="container">
            <h2>Encontre os Melhores Preços de Combustível</h2>
            <p>Compare preços e encontre o posto mais vantajoso para você</p>
            <div class="search-box">
                <form action="/posto" method="GET" class="search-form">
                    <input type="text" name="busca" class="form-control" 
                           placeholder="Buscar por nome do posto ou endereço...">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i> Buscar Postos
                    </button>
                </form>
            </div>
        </div>
    </section>

    <!-- Estatísticas -->
    <section class="container">
        <div class="stats-cards">
            <div class="stat-card">
                <i class="bi bi-fuel-pump"></i>
                <div class="stat-number">{{totalPostos}}</div>
                <div class="stat-label">Postos Cadastrados</div>
            </div>
            <div class="stat-card">
                <i class="bi bi-currency-dollar"></i>
                <div class="stat-number">{{mediaPreco}} <small>R$/L</small></div>
                <div class="stat-label">Preço Médio Gasolina</div>
            </div>
            <div class="stat-card">
                <i class="bi bi-geo-alt"></i>
                <div class="stat-number">{{totalCidades}}</div>
                <div class="stat-label">Cidades Atendidas</div>
            </div>
            <div class="stat-card">
                <i class="bi bi-graph-up"></i>
                <div class="stat-number">{{economia}}%</div>
                <div class="stat-label">Economia Média</div>
            </div>
        </div>
    </section>

    <!-- Lista de Postos -->
    <section class="postos-container">
        <div class="container">
            <div class="postos-header">
                <h2>Postos Disponíveis</h2>
                <a href="/posto/novo" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Cadastrar Novo Posto
                </a>
            </div>

            {{#if messages.success}}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{#each messages.success}}
                        {{this}}
                    {{/each}}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {{/if}}

            {{#if messages.error}}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{#each messages.error}}
                        {{this}}
                    {{/each}}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {{/if}}

            <div class="postos-grid">
                {{#if listaPostos.length}}
                    {{#each listaPostos}}
                    <div class="posto-card">
                        <div class="posto-header">
                            <h3>{{this.nome}}</h3>
                            <div class="rating">
                                <i class="bi bi-star-fill"></i> 4.5
                            </div>
                        </div>
                        
                        <p class="endereco">
                            <i class="bi bi-geo-alt"></i> {{this.endereco}}
                        </p>
                        
                        {{#if this.telefone}}
                        <p class="telefone">
                            <i class="bi bi-telephone"></i> {{this.telefone}}
                        </p>
                        {{/if}}

                        <div class="combustiveis">
                            {{#if this.preco_gasolina_comum}}
                            <div class="combustivel">
                                <span class="tipo">Gasolina Comum</span>
                                <span class="preco">R$ {{formatNumber this.preco_gasolina_comum 3}}</span>
                            </div>
                            {{/if}}
                            
                            {{#if this.preco_gasolina_aditivada}}
                            <div class="combustivel">
                                <span class="tipo">Gasolina Aditivada</span>
                                <span class="preco">R$ {{formatNumber this.preco_gasolina_aditivada 3}}</span>
                            </div>
                            {{/if}}
                            
                            {{#if this.preco_etanol}}
                            <div class="combustivel">
                                <span class="tipo">Etanol</span>
                                <span class="preco">R$ {{formatNumber this.preco_etanol 3}}</span>
                            </div>
                            {{/if}}
                            
                            {{#if this.preco_diesel}}
                            <div class="combustivel">
                                <span class="tipo">Diesel</span>
                                <span class="preco">R$ {{formatNumber this.preco_diesel 3}}</span>
                            </div>
                            {{/if}}
                            
                            {{#if this.preco_diesel_s10}}
                            <div class="combustivel">
                                <span class="tipo">Diesel S10</span>
                                <span class="preco">R$ {{formatNumber this.preco_diesel_s10 3}}</span>
                            </div>
                            {{/if}}
                        </div>

                        <div class="card-actions">
                            <a href="/posto/{{this.id}}/atualizacao" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            <a href="/posto/{{this.id}}/exclusao" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Excluir
                            </a>
                        </div>
                    </div>
                    {{/each}}
                {{else}}
                    <div class="no-results">
                        <div class="text-center py-5">
                            <i class="bi bi-fuel-pump" style="font-size: 4rem; color: #ccc;"></i>
                            <h3 class="mt-4">Nenhum posto cadastrado</h3>
                            <p class="text-muted mb-4">Comece cadastrando o primeiro posto de combustível.</p>
                            <a href="/posto/novo" class="btn btn-primary btn-lg">
                                <i class="bi bi-plus-circle"></i> Cadastrar Primeiro Posto
                            </a>
                        </div>
                    </div>
                {{/if}}
            </div>
            
            {{#if listaPostos.length}}
            <div class="text-center mt-5">
                <a href="/posto" class="btn btn-outline-primary">
                    <i class="bi bi-list"></i> Ver Todos os Postos
                </a>
            </div>
            {{/if}}
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 PostoFácil - Sistema de Gerenciamento de Postos de Combustível</p>
            <p class="small mt-2">
                <i class="bi bi-info-circle"></i> 
                Compare preços e economize no seu abastecimento
            </p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Scripts personalizados -->
    <script src="/js/script.js"></script>
</body>
</html>