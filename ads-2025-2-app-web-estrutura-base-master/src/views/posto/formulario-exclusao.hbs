<!-- src/views/posto/formulario-exclusao.hbs -->
<h2>Exclusão de posto</h2>

{{#if messages.error}}
    <div class="alert alert-danger">
        {{#each messages.error}}
            <p class="p-0 m-0">{{this}}</p>
        {{/each}}
    </div>
{{/if}}

<form method="post" action="/posto/{{posto.id}}/exclusao?_method=delete">
    <div class="row mt-4">
        <div class="col">
            <p>
                Deseja realmente excluir o posto <b>{{posto.nome}}</b>?
            </p>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col">
            <button type="submit" class="btn btn-danger">Sim, confirmo exclusão</button>
            <a href="/posto" class="btn btn-secondary">Cancelar</a>
        </div>
    </div>
</form>